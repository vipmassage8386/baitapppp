using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Drawing.Text;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Xml.Linq;

namespace BTVNbuoi4
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void label4_Click(object sender, EventArgs e)
        {


        }

        private void Form1_Load(object sender, EventArgs e)
        {
            cmbKhoa.SelectedIndex = 0;
        }

        private void btnUpdate_Click(object sender, EventArgs e)
        {
            string mssv = txtMSSV.Text;
            string name = txtHoTen.Text;
            string khoa = cmbKhoa.SelectedItem.ToString();
            string gioitinh = otpMale.Checked ? "Nam" : "Nữ";
            string diemTB = txtDTB.Text;

            // Kiểm tra đã có MSSV trong DataGridView chưa
            bool found = false;
            foreach (DataGridViewRow row in dgvStudent.Rows)
            {
                if (row.Cells[0].Value?.ToString() == mssv)
                {
                    // Cập nhật
                    row.Cells[1].Value = name;
                    row.Cells[2].Value = gioitinh;
                    row.Cells[3].Value = diemTB;
                    row.Cells[4].Value = khoa;

                    MessageBox.Show("Cập nhật dữ liệu thành công!");
                    found = true;
                    break;
                }
            }

            if (!found)
            {
                // Thêm mới
                dgvStudent.Rows.Add(mssv, name, khoa, gioitinh, diemTB);
                MessageBox.Show("Thêm mới dữ liệu thành công!");
            }

            CapNhatSoLuong(); // cập nhật lại số lượng Nam/Nữ
        }


        private void cmbKhoa_SelectedIndexChanged(object sender, EventArgs e)
        {

        }
        private void CapNhatSoLuong()
        {
            int soNam = 0, soNu = 0;

            foreach (DataGridViewRow row in dgvStudent.Rows)
            {
                if (row.Cells[3].Value?.ToString() == "Nam")
                    soNam++;
                else if (row.Cells[3].Value?.ToString() == "Nữ")
                    soNu++;
            }

            txtNam.Text = soNam.ToString();
            txtNu.Text = soNu.ToString();
        }

        private void dgvStudent_CellClick(object sender, DataGridViewCellEventArgs e)
        {
            if (e.RowIndex >= 0) // đảm bảo không click header
            {
                DataGridViewRow row = dgvStudent.Rows[e.RowIndex];

                // Bỏ qua row trống cuối cùng
                if (row.IsNewRow) return;

                txtMSSV.Text = row.Cells[0].Value?.ToString() ?? "";
                txtHoTen.Text = row.Cells[1].Value?.ToString() ?? "";
                cmbKhoa.SelectedItem = row.Cells[2].Value?.ToString() ?? "QTKD";

                string gioitinh = row.Cells[3].Value?.ToString();
                if (gioitinh == "Nam")
                    otpMale.Checked = true;
                else
                    otpFamale.Checked = true;

                txtDTB.Text = row.Cells[4].Value?.ToString() ?? "";
            }
        }

        private void btnXoa_Click(object sender, EventArgs e)
        {
            string mssv = txtMSSV.Text;
            bool found = false;

            foreach (DataGridViewRow row in dgvStudent.Rows)
            {
                if (row.Cells[0].Value?.ToString() == mssv)
                {
                    found = true;
                    DialogResult result = MessageBox.Show("Bạn có chắc chắn muốn xóa?",
                        "Xác nhận",
                        MessageBoxButtons.YesNo,
                        MessageBoxIcon.Warning);
                    if (result == DialogResult.Yes)
                    {
                        dgvStudent.Rows.Remove(row);
                        MessageBox.Show("Xóa sinh viên thành công!");
                        CapNhatSoLuong();
                    }
                    break;
                }
            }

            if (!found)
            {
                MessageBox.Show("Không tìm thấy MSSV cần xóa!");
            }
        }
    }
}
